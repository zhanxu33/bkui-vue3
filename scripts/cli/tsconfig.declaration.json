{
  "compilerOptions": {
    "strictNullChecks": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../../lib",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "../../packages",
    "paths": {
      "@bkui-vue/*": ["*/src"]
    },
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": [
    "../../packages/*/src",
    "../../packages/**/*.d.ts",
    "../../packages/bkui-vue/index.ts",
    "../../index.d.ts"
  ],
  "exclude": ["../../packages/bkui-vue/index.dist.ts", "../../packages/icon"]
}
